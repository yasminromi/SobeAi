<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".SignUpActivity"
        android:background="@color/colorPrimary">

    <TextView android:id="@+id/name_text_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="200dp"
              android:layout_marginStart="50dp"
              android:text="@string/sign_up_name"
              android:textColor="#fff"
              android:textSize="20sp"
    />

    <EditText
            android:id="@+id/name_edit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/name_text_view"
            app:layout_constraintTop_toTopOf="@+id/name_text_view"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
    />

    <TextView android:id="@+id/phone_text_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="@+id/name_text_view"
              app:layout_constraintTop_toBottomOf="@+id/name_text_view"
              android:layout_marginTop="80dp"
              android:text="@string/sign_up_phone"
              android:textColor="#fff"
              android:textSize="20sp"
    />

    <EditText
            android:id="@+id/phone_edit"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/phone_text_view"
            app:layout_constraintTop_toTopOf="@+id/phone_text_view"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
    />

    <Button android:id="@+id/button_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp"
            android:layout_marginStart="148dp"
            android:layout_marginEnd="148dp"
            android:text="@string/sign_up_button"

    />


</androidx.constraintlayout.widget.ConstraintLayout>