<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/numeric_container"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintBottom_toTopOf="@+id/button4"
            app:layout_constraintVertical_chainStyle="packed"/>

    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintTop_toTopOf="@+id/button1"
            app:layout_constraintBottom_toBottomOf="@+id/button1"/>

    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/button1"
            app:layout_constraintBottom_toBottomOf="@+id/button1"
            app:layout_constraintEnd_toStartOf="@+id/plusButton"
            app:layout_constraintHorizontal_bias="0.5"
            />

    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button1"
            app:layout_constraintEnd_toEndOf="@+id/button1"
            app:layout_constraintBottom_toTopOf="@+id/button7"
            app:layout_constraintEnd_toStartOf="@+id/button5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@+id/button1"/>

    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            app:layout_constraintTop_toTopOf="@+id/button4"
            app:layout_constraintBottom_toBottomOf="@+id/button4"
            app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="@+id/button3"
            />

    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintEnd_toEndOf="@+id/button4"
            app:layout_constraintEnd_toStartOf="@+id/button8"
            app:layout_constraintBottom_toTopOf="@+id/clearButton"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@+id/button4"/>

    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            app:layout_constraintTop_toTopOf="@+id/button7"
            app:layout_constraintBottom_toBottomOf="@+id/button7"
            app:layout_constraintStart_toEndOf="@+id/button7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button9"/>

    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            app:layout_constraintTop_toTopOf="@+id/button7"
            app:layout_constraintBottom_toBottomOf="@+id/button7"
            app:layout_constraintStart_toEndOf="@+id/button8"
            app:layout_constraintEnd_toEndOf="@+id/button6"/>

    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            app:layout_constraintStart_toEndOf="@+id/clearButton"
            app:layout_constraintTop_toTopOf="@+id/clearButton"
            app:layout_constraintBottom_toBottomOf="@+id/clearButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/confirmButton"/>

    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            app:layout_constraintTop_toTopOf="@+id/button4"
            app:layout_constraintBottom_toBottomOf="@+id/button4"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button6"/>

    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/plusButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@+id/button3"
            app:layout_constraintBottom_toTopOf="@+id/minusButton"
            app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_chainStyle="spread_inside"
            android:layout_marginEnd="8dp"/>

    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/minusButton"
            app:layout_constraintEnd_toEndOf="@+id/plusButton"
            app:layout_constraintLeft_toLeftOf="@id/plusButton"
            app:layout_constraintTop_toBottomOf="@+id/plusButton"
            app:layout_constraintBottom_toTopOf="@+id/timesButton"
            android:visibility="visible"/>

    <Button
            android:text="x"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/timesButton"
            app:layout_constraintTop_toBottomOf="@+id/minusButton"
            app:layout_constraintStart_toStartOf="@+id/minusButton"
            app:layout_constraintEnd_toEndOf="@+id/minusButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/equalsButton"
            android:visibility="visible"/>

    <Button
            android:text="clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clearButton"
            app:layout_constraintTop_toBottomOf="@+id/button7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button0"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@+id/button7"
            />

    <Button
            android:text="Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirmButton"
            app:layout_constraintStart_toEndOf="@+id/button0"
            app:layout_constraintTop_toTopOf="@+id/clearButton"
            app:layout_constraintBottom_toBottomOf="@+id/clearButton"
            app:layout_constraintEnd_toEndOf="@+id/button9"/>

    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/equalsButton"
            app:layout_constraintTop_toBottomOf="@+id/timesButton"
            app:layout_constraintStart_toStartOf="@+id/timesButton"
            app:layout_constraintEnd_toEndOf="@+id/timesButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/divideButton"
            android:visibility="visible"/>

    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/equalsButton"
            android:id="@+id/divideButton"
            app:layout_constraintEnd_toEndOf="@id/equalsButton"
            app:layout_constraintStart_toStartOf="@+id/equalsButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@+id/confirmButton"
            android:visibility="visible"/>
</android.support.constraint.ConstraintLayout>